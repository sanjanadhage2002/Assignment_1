@model Product

<div class="container">
    <h2>Add Product</h2>
    <form asp-action="Add" method="post">
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" name="Name" />
        </div>
        <div class="form-group">
            <label>Price</label>
            <input type="text" class="form-control" name="Price" />
        </div>
        <button type="submit" class="btn btn-success">Add Product</button>
    </form>
</div>