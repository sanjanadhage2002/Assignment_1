@model IEnumerable<Product>

<div class="container demo">
    <h2>Product List</h2>
    <a href="/Product/Add" class="btn btn-primary btnproduct">Add New Product</a>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>
                        <a href="/Product/Edit/@product.Id" class="btn btn-warning">Edit</a>
                        <a href="/Product/Delete/@product.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>